<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Book Title</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the book title"
                    name = "name" required>
                </div>

                <div class="form-group">
                    <label for="numberField">Author</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the author"
                    name ="author" required>
                </div>

                <div class="form-group">
                    <label for="numberField">published</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the published"
                    name="published" required>
                </div>

                <div class="form-group">
                    <label for="numberField">Description</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the description"
                    name="description" required>
                </div>
                <div class="form-group">
                    <label for="numberField">Price</label>
                    <input type="text" class="form-control"
                    id="numberField"
                    placeholder="Enter the price"
                    name="price" required>
                </div>
 
                
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/book-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>

