<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Book Title</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Book title"
                    name="name" 
                    value="<%= book.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="nameTextField">Book Author</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the book author"
                    name="author" 
                    value="<%= book.author %>"
                    required>
                </div>
                
                
                <div class="form-group">
                    <label for="nameTextField">Book published</label>
                    <input type="text" class="form-control"
                    id="numberField"
                    placeholder="Enter the book published"
                    name="published" 
                    value="<%= book.published %>"
                    required>
                </div>
                <div class="form-group">
                    <label for="nameTextField">Book Description</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Book description"
                    name="description" 
                    value="<%= book.description %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="nameTextField">Price</label>
                    <input type="text" class="form-control"
                    id="numberField"
                    placeholder="Enter the Book price"
                    name="price" 
                    value="<%= book.price %>"
                    required>
                </div>
                
                

                

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/book-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>


